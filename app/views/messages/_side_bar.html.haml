.SideBar
  .SideHeader
    .SideHeader__user 
      %h1.SideHeader__name 
        = current_user.name
      %ul.SideHeader__IconList
        %li
          = link_to "/groups/new", class: "SideHeader__icon" do
            = icon('fas', 'edit')
        %li
          = link_to edit_user_path(current_user), class: "SideHeader__icon" do
            = icon('fas', 'cog')

  .groups
    - current_user.groups.each do |group|
      .groups__list
        = link_to '#' do 
          .groups__list--name 
            = group.name
          .groups__list--message 
            まだメッセージはありません

  